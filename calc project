            <button class="btn btn-white" data-num="+/-">+/-</button>
            <button class="btn btn-white" data-num="%">%</button>
            <button class="btn btn-yellow" data-num="/">/</button>
            <button class="btn btn-brown" data-num="9">9</button>
            <button class="btn btn-brown" data-num="8">8</button>
            <button class="btn btn-brown" data-num="7">7</button>
            <button class="btn btn-yellow" data-num="*">*</button>
            <button class="btn btn-brown" data-num="6">6</button>
            <button class="btn btn-brown" data-num="5">5</button>
            <button class="btn btn-brown" data-num="4">4</button>
            <button class="btn btn-yellow" data-num="-">-</button>
            <button class="btn btn-brown" data-num="3">3</button>
            <button class="btn btn-brown" data-num="2">2</button>
            <button class="btn btn-brown" data-num="1">1</button>
            <button class="btn btn-yellow" data-num="+">+</button>
            <button class="btn btn-brown" data-num="0">0</button>
            <button class="btn btn-brown" data-num=".">.</button>
            <button class="btn btn-equal" >=</button>
            
